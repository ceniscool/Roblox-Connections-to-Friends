{
  "manifest_version": 3,
  "name": "Roblox Friends Renamer",
  "version": "1.0",
  "description": "Replaces 'Connections' with 'Friends' on Roblox.",
  "permissions": ["notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["replace.js", "version-checker.js"],
      "run_at": "document_idle"
    }
  ]
}
