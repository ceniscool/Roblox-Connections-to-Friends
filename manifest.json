{
  "manifest_version": 3,
  "name": "Roblox: Revert Connections To Friends",
  "version": "1.0.5.2",
  "description": "Replaces 'Connections' with 'Friends' on Roblox.",
  "permissions": ["notifications"],
  "action": {
    "default_icon": {
      "48": "rsz_maxresdefault.png"
    },
    "default_title": "Roblox Friends Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["replace.js", "version-checker.js", "title-override.js"],
      "run_at": "document_idle"
    }
  ]
}
